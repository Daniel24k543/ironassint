# Development Environment Variables for GymIA Backend
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=https://ironassint-production.up.railway.app

# Database (for development, we'll use a simple SQLite setup)
DB_CLIENT=sqlite3
DB_CONNECTION_FILENAME=./dev_database.sqlite3
DB_MIGRATIONS_DIRECTORY=./migrations
DB_SEEDS_DIRECTORY=./seeds

# JWT Configuration
JWT_SECRET=dev_jwt_secret_iron_assistant_2024_development_only
JWT_EXPIRES_IN=7d

# Firebase Admin (for development - you can use test credentials)
FIREBASE_PROJECT_ID=iron-assistant-dev
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ndev_key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-dev@iron-assistant-dev.iam.gserviceaccount.com

# Stripe (use test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_dev_key_here
STRIPE_SECRET_KEY=sk_test_dev_key_here
STRIPE_WEBHOOK_SECRET=whsec_dev_webhook_secret

# OpenAI (for development)
OPENAI_API_KEY=sk-dev_openai_key_here

# Push Notifications
EXPO_ACCESS_TOKEN=dev_expo_access_token

# Security
BCRYPT_ROUNDS=8
SESSION_SECRET=dev_session_secret_for_iron_assistant

# Rate Limiting (more permissive for dev)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Features
ENABLE_CORS=true
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Redis (optional for development)
REDIS_URL=redis://localhost:6379