# Node.js Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=iron_assistant_dev
DB_NAME_TEST=iron_assistant_test
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20

# Alternative: Use a single DATABASE_URL for production
# DATABASE_URL=postgresql://username:password@localhost:5432/iron_assistant

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxxxx_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_xxxxx_your_webhook_secret

# Stripe Price IDs (from your Stripe Dashboard)
STRIPE_PRICE_BASIC_MONTHLY=price_xxxxx_basic_monthly
STRIPE_PRICE_PRO_YEARLY=price_xxxxx_pro_yearly
STRIPE_PRICE_LIFETIME=price_xxxxx_lifetime

# OpenAI Configuration
OPENAI_API_KEY=sk-xxxxx_your_openai_api_key
OPENAI_ORGANIZATION=org-xxxxx_your_organization_id

# Email Configuration (for password resets and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS Configuration (for file uploads, if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Documentation
API_DOCS_URL=https://docs.ironassistant.app

# Monitoring and Analytics
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
ANALYTICS_API_KEY=your-analytics-api-key

# Feature Flags
ENABLE_STRIPE=true
ENABLE_OPENAI=true
ENABLE_BLUETOOTH=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_VERIFICATION=true

# Development/Testing
MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false
LOG_SQL_QUERIES=false